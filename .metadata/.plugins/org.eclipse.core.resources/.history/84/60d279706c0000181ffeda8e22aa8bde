package com.threads;

public class ExecuteTransaction extends Thread{
	Customer c = new Customer();
	int amount;
	
	public void transaction(Customer c,int amount){
		this.c=c;
		this.amount=amount;
		int newBalance = c.getBalance() - amount;
		c.setBalance(newBalance);
	}
	
	public void run(){
		transaction(this.c,this.amount);
	}
}
