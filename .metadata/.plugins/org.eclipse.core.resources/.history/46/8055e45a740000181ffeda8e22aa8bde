package com.threads;

public class ExecuteTransaction extends Thread{
	Customer c ;
	int amountToDeduct;
	public void setCustomer(Customer c,int balance){
		this.c = c;
		this.amountToDeduct= balance;
	}

	public void processPayment(Customer c,int balance) {
		// TODO Auto-generated method stub
		 c.setBalance(c.getBalance()-amountToDeduct);
	}
	
	public void run(){  
		processPayment(c,amountToDeduct); 
	}  
	

}
